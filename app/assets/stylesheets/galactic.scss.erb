body
{
    background: #202020;
    text-align: center;
    margin: 0;
}

/*LOGIN MENU*/

#header
{
    margin-left: auto;
    margin-right: auto;
    width: 100%;
    height: 135px;
    background: black url(<%= asset_path('Virgin_Galactic.png')%>) no-repeat center ;
    position: relative;
    border-bottom: 1px solid #4a4a4a;
}

#header h1
{
    font-family: Arial, Helvetica, sans-serif;
    font-weight: bold;
    position: relative;
    top: 30px;
    font-size: 40px;
    color: white;
}

#header h2
{
    font-family: Arial, Helvetica, sans-serif;
    font-weight: bold;
    font-size: 16px;
    color: #7e7e7e;
}

hr#header_stripe
{
    height: 12px;
    position: relative;
    top: -7px;
    background-color: #191919;
    border: none;
    color: #191919;
    margin: 0;
}

#wrapper{
    position: relative;
    margin-left: auto;
    margin-right: auto;
    width: 904px;
    text-align: center;
    top: -32px;
}
#toppanel {
    position: absolute;
    width: 900px;
    z-index: 25;
    text-align: center;
}
#panel {
    width: 900px;
    position: relative;
    top: 1px;
    height: 0px; /* 400 or 0? */
    margin-left: auto;
    margin-right: auto;
    z-index: 10;
    overflow: hidden;
    text-align: left;
}
#panel_contents {
    background: black;
    filter:alpha(opacity=70);
    -moz-opacity:0.70;
    -khtml-opacity: 0.70;
    opacity: 0.70;
    height: 100%;
    width: 904px; /* 950px or 904px? */
    position: absolute;
    z-index: -1;
}

.border {
    border: 15px #1d1d1d solid;
}

img.border_pic {
    border: 15px #1d1d1d solid;
    position: absolute;
    top: 110px; /* 110px or 150px? */
    float: left;
    margin-left: 150px; /* 150px or 475px? */
    width: 275px; /* 250px or 275px? */
    height: 150px;
    z-index: 30;
}
div#login {
    width: 240px; /* 240px or 265px? */
    height: 150px; /*150 or 200?*/
    position: absolute;
    right: 150px;
    top: 110px;
    background: #46392f;
    text-align: left;
    padding-left: 10px; /* or 15? */
}
div#login p {
    color: #CCCCCC;
    font-family: Century Gothic, Georgia, "Times New Roman", Times, serif;
    line-height: 25px;
    // width: 200px;
}

// div#login.border{
//     margin-left: 150px;
// }
div#login input#password {
    position: relative;
    right: -6px;
    // width: 200px;
}
div#login input#login_btn {
    border: 1px #899690 solid;
    cursor: pointer;
    position: relative;
    top: 30px;
    left: 86px;
}

.panel_button {
    margin-left: auto;
    margin-right: auto;
    position: relative;
    top: 1px;
    width: 173px;
    height: 54px;
    background: url(<%= asset_path('panel_button.png') %>);
    z-index: 20;
    filter:alpha(opacity=70);
    -moz-opacity:0.70;
    -khtml-opacity: 0.70;
    opacity: 0.70;
    cursor: pointer;
}
.panel_button a {
    text-decoration: none;
    color: #545454;
    font-size: 20px;
    font-weight: bold;
    position: relative;
    top: 5px;
    left: 10px;
    font-family: Arial, Helvetica, sans-serif;
}
.panel_button a:hover {
color: #999999;
}

.panel_button img{
position: relative;
top: 10px;
border: none;
}

#content {
    margin-left: auto;
    margin-right: auto;
    width: 600px;
    position: relative;
    top: 90px;
    text-align: left;
    color: #545454;
    font-family: Arial, Helvetica, sans-serif;
    font-size: 12px;
    padding-bottom: 30px;
}
/*END LOGIN MENU
*/

/*LOGO SHEEN EFFECT*/

.logo {
    display: block;
    background: url(<%= asset_path('Virgin_Galactic.png')%>) 0 0 no-repeat;
    height: 70px;
    width: 91px;
    overflow: hidden;
}

.logo span {
    display: block;
    background: url(<%= asset_path('Virgin_Galactic.png')%>) -60px -80px no-repeat;

    transition-property: all;
    transition-duration: .8s;

    height: 70px;
    width: 91px;
}

