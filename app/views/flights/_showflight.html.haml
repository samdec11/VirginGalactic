/ -if @flight.nil?
/   %h3 Please Add a Flight
/ -else
%table#flights
  %tr
    %th Date
    %th Flight
    %th From > To
    %th Plane
    %th Seats
  - @flights.each do |flight|
    %tr{:class => cycle('row0', 'row1')}
      %td= flight.dep_time
      %td= link_to(flight.name, flight)
      %td= flight.origin + ' > ' + flight.dest
      %td= flight.plane.name
      %td= flight.seats.count
