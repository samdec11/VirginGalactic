-if @auth.present? && (@auth.is_admin == false)
  %table#flights
    %tr
      %th Date
      %th Flight
      %th From > To
      %th Plane
      %th Total Seats
    - @flights.each do |flight|
      %tr
        %td= flight.dep_time
        %td= link_to(flight.name, flight)
        %td= flight.origin + ' > ' + flight.dest
        %td= flight.plane.name
        %th= flight.seats.count