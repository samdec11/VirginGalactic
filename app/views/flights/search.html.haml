.row
  .large-5.columns

    #search
      = button_to_function('Search Flights', 'show_search_form()', :class => 'button radius',id:"searchbtn")
      %script
        availableTags= ["JFK","LNG"]

      #search_form.hide
        =form_tag search_results_path, remote:true, method:'get' do
          =text_field_tag :from, nil, placeholder:"Origin",:class=> 'airports'
          =text_field_tag :to, nil, placeholder:"Destination", :class=> 'airports'
          = button_to_function('Cancel', 'cancel_search()', :class => 'button tiny radius')
          =submit_tag 'Search',:class=>"button tiny"

      #results
        =render partial:'showresults'
  .large-7.columns