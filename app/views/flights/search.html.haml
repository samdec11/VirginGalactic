
= button_to_function('Search', 'show_search_form()', :class => 'button tiny radius alert',id:"searchbtn")

#search_form.hide
  =form_tag search_results_path, remote:true, method:'get' do
    =text_field_tag :from, nil, placeholder:"Origin"
    =text_field_tag :to, nil, placeholder:"Destination"
    = button_to_function('Cancel', 'cancel_search()', :class => 'button tiny radius alert')
    =submit_tag 'Search',:class=>"button success tiny"

#results
  =render partial:'showresults'