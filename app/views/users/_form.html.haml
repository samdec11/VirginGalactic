.row
  .large-3.columns
    =form_for @user, :remote => true do |f|
      = f.label :name
      = f.text_field :name
      = f.label :email
      = f.text_field :email
      = f.label :password
      = f.password_field :password
      = f.label :password_confirmation
      = f.password_field :password_confirmation
      = button_to_function('Cancel', 'clear_form()', :class => 'button tiny radius')
      = f.submit