=form_for @plane, :remote => true do |f|
  = f.label :name
  = f.text_field :name, :autofocus => true, :placeholder => 'Name'
  = f.label :rows
  = f.text_field :rows, :placeholder => 'Rows'
  = f.label :cols
  = f.text_field :cols, :placeholder => 'Columns'
  = f.submit :class => 'button radius'
  = link_to('Cancel', '#', :'data-clear-form' => true, :class => 'button radius', :id => 'cancel_btn')
